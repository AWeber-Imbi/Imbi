# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[*.py,*.cfg]
indent_style = space
indent_size = 4

# 2 space indentation
[*.{css,html,js,jsx,sh,sql,yml,yaml}]
indent_style = space
indent_size = 2

[bootstrap]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 2
